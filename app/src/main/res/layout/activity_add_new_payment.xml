<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/table_view_bg"
        tools:context=".premium.AddNewPaymentActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:id="@+id/linearLayout6"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/table_view_bg"
                android:gravity="center_vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/payment_methods"
                    android:textColor="@color/app_text_black"
                    android:textSize="14sp" />
        </LinearLayout>
        <RelativeLayout
                android:id="@+id/relativeLayout4"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout6">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="32dp"
                    android:layout_marginLeft="32dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/master_card_icon" />

            <ImageButton
                    android:id="@+id/master_card_show_btn"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="0dp"
                    android:tint="#BAC0CB"
                    android:layout_marginRight="0dp" />

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="32dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginRight="32dp"
                    android:background="@color/seprator_color" />

        </RelativeLayout>

        <LinearLayout
                android:id="@+id/master_card_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout4">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/card_number"
                    android:textSize="12sp"
                    android:fontFamily="@font/montserrat"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:textColor="@color/app_text_black"
                    />
            <EditText
                    android:id="@+id/master_card_number_et"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/round_app_stroke_bg"
                    android:hint="@string/example_card_numner"
                    android:maxLength="19"
                    android:textSize="14sp"
                    android:inputType="phone"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/app_text_black"
                    android:textColorHint="@color/app_light_text_color"
                    android:paddingStart="20dp"
                    android:paddingLeft="20dp"
                    />
           <LinearLayout
                   android:layout_width="match_parent"
                   android:weightSum="2"
                   android:layout_marginTop="16dp"
                   android:orientation="horizontal"
                   android:layout_height="wrap_content">
               <LinearLayout
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:orientation="vertical"
                       android:layout_marginEnd="16dp"
                       android:layout_marginRight="16dp"
                       android:layout_height="wrap_content">
                   <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="@string/expiration_date"
                           android:textSize="12sp"
                           android:fontFamily="@font/montserrat"
                           android:layout_marginStart="16dp"
                           android:layout_marginLeft="16dp"
                           android:textColor="@color/app_text_black"
                           />
                   <EditText
                           android:id="@+id/master_card_expiry_date_et"
                           android:layout_width="match_parent"
                           android:layout_height="60dp"
                           android:layout_marginTop="8dp"
                           android:hint="@string/expiry_date_hint"
                           android:padding="20dp"
                           android:maxLength="5"
                           android:textSize="14sp"
                           android:fontFamily="@font/montserrat"
                           android:textColor="@color/app_text_black"
                           android:textColorHint="@color/app_light_text_color"
                           android:inputType="phone"
                           android:background="@drawable/round_app_stroke_bg"
                           android:layout_marginBottom="8dp"
                           />
               </LinearLayout>
               <LinearLayout
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:orientation="vertical"
                       android:layout_marginStart="16dp"
                       android:layout_marginLeft="16dp"
                       android:layout_height="wrap_content">
                   <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="@string/cvv"
                           android:textSize="12sp"
                           android:fontFamily="@font/montserrat"
                           android:layout_marginStart="20dp"
                           android:layout_marginLeft="20dp"
                           android:textColor="@color/app_text_black"
                           />
                   <EditText
                           android:id="@+id/master_card_cvv_et"
                           android:layout_width="match_parent"
                           android:layout_height="60dp"
                           android:layout_marginTop="8dp"
                           android:padding="20dp"
                           android:inputType="numberPassword"
                           android:maxLength="3"
                           android:textSize="14sp"
                           android:fontFamily="@font/montserrat"
                           android:textColor="@color/app_text_black"
                           android:textColorHint="@color/app_light_text_color"
                           android:hint="@string/cvv"
                           android:background="@drawable/round_app_stroke_bg"
                           android:layout_marginBottom="8dp"
                           />
               </LinearLayout>

           </LinearLayout>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/card_holders_name"
                    android:textSize="12sp"
                    android:fontFamily="@font/montserrat"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/app_text_black"
                    />
            <EditText
                    android:id="@+id/master_card_holder_name_et"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/round_app_stroke_bg"
                    android:hint="John Don"
                    android:maxLength="19"
                    android:textSize="14sp"
                    android:inputType="textPersonName"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/app_text_black"
                    android:textColorHint="@color/app_light_text_color"
                    android:paddingStart="20dp"
                    android:paddingLeft="20dp"
                    />
            <Button
                    android:id="@+id/add_master_card_btn"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/app_btn_round"
                    android:textColor="@color/white"
                    android:text="@string/add_card"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/montserrat"
                    />

        </LinearLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>