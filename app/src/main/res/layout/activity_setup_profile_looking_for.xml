<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".setupProfile.SetupProfileGenderActivity">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/setupProfile_lookingFor_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/setup_profile"
            app:titleTextColor="@color/app_text_black"
            app:navigationIcon="@drawable/ic_arrow_back_black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
    </androidx.appcompat.widget.Toolbar>

    <TextView
            android:text="@string/i_am_looking_for"
            android:textColor="@color/app_text_black"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="22sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/setupProfile_lookingFor_toolbar"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="24dp"/>
    <TextView
            android:text="@string/select_your_choice"
            android:fontFamily="@font/montserrat"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="@+id/textView2"/>

    <Button android:layout_width="match_parent"
            android:background="@drawable/rectangle_app_btn"
            android:layout_height="wrap_content"
            android:text="@string/next"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/setup_looking_for_continue_btn"
    />

    <androidx.recyclerview.widget.RecyclerView android:layout_width="405dp"
                                               android:layout_height="514dp"
                                               app:layout_constraintBottom_toTopOf="@+id/setup_looking_for_continue_btn"
                                               app:layout_constraintTop_toBottomOf="@id/textView4"
                                               app:layout_constraintEnd_toEndOf="parent"
                                               app:layout_constraintStart_toStartOf="parent"
    android:id="@+id/rc_view">

    </androidx.recyclerview.widget.RecyclerView>




</androidx.constraintlayout.widget.ConstraintLayout>