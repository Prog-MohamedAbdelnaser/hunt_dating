<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp"
        app:cardCornerRadius="16dp">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="14dp"
            android:paddingBottom="14dp">


        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="99sp"
                    android:layout_height="99sp"
                    android:layout_centerInParent="true"
                    android:padding="10sp"
                    android:scaleType="fitXY"
                    android:src="@drawable/pink_circle"/>

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/white_right"/>

        </RelativeLayout>


        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/success"
                android:textAlignment="center"
                android:textColor="@color/pink"
                android:textSize="25sp"/>


        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/you_have_successfully_deactivated"
                android:textAlignment="center"
                android:textColor="@color/transparent_black"
                android:textSize="13sp"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/the_accounts"
                android:textAlignment="center"
                android:textColor="@color/transparent_black"
                android:textSize="13sp"/>


        <View android:layout_width="match_parent"
              android:layout_height="0.1dp"
              android:layout_marginTop="5sp"
              android:background="@color/app_seperator_color"/>


        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvOkddId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/ok"
                android:textAlignment="center"
                android:textColor="@color/material_orange"
                android:textSize="18dp"/>

    </LinearLayout>


</androidx.cardview.widget.CardView>