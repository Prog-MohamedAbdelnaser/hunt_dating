<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".setupProfile.SetupProfileUploadPhotoActivity">
    <androidx.appcompat.widget.Toolbar
            android:id="@+id/setupProfileupload_pic3__toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/setup_profile"
            app:titleTextColor="@color/app_text_black"
            app:navigationIcon="@drawable/ic_arrow_back_black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
    </androidx.appcompat.widget.Toolbar>

    <TextView
            android:text="@string/added_photo"
            android:textColor="@color/app_text_black"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="22sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/setupProfileupload_pic3__toolbar"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="24dp"/>

    <Button android:layout_width="match_parent"
            android:background="@drawable/rectangle_app_btn"
            android:layout_height="wrap_content"
            android:text="@string/done"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/setup_profile_upload_pic_next_btn"
    />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"

            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/add_photo_layout"
            android:layout_height="400dp"
            android:layout_marginEnd="50dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/setup_profile_upload_pic_next_btn"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.393">

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="236dp"
                android:layout_height="236dp"
                app:civ_border_width="0dp"
                app:civ_border_color="#FF000000"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/change_pic_tv"
                  android:text="@string/change_pic"
                  android:background="@drawable/parial_dark_circle_bg"
                  android:gravity="center"
                  android:textSize="13sp"
                  android:layout_marginStart="50dp"

                  android:drawablePadding="-60dp"
                  android:drawableStart="@drawable/ic_pencil"
                  android:drawableLeft="@drawable/ic_pencil"
                  android:textColor="@color/white"
                  android:paddingBottom="30dp"
                  app:layout_constraintEnd_toEndOf="@+id/profile_image"
                  app:layout_constraintStart_toStartOf="@+id/profile_image"
                  app:layout_constraintHorizontal_bias="1.0"
                  android:layout_marginTop="160dp" app:layout_constraintTop_toTopOf="@+id/profile_image"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>