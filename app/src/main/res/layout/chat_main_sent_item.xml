<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:id="@+id/chat_with_us_item"
            app:cardCornerRadius="12dp"
            android:layout_margin="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" Of="parent"           app:layout_constraintTop_toTopOf="parent"
            android:layout_height="52dp">
        <ImageView
                android:id="@+id/imageView14"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:src="@drawable/boy_casual_eyes"
                app:layout_constraintBottom_toBottomOf="@+id/linearLayout10"
                app:layout_constraintStart_toStartOf="parent" />
    </androidx.cardview.widget.CardView>


    <LinearLayout
            android:id="@+id/linearLayout10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="92dp"
            android:background="@drawable/chat_main_sent_bg"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/chat_with_us_item"
            app:layout_constraintTop_toTopOf="parent">


        <androidx.cardview.widget.CardView
                android:id="@+id/lytCrdlayoutSent"
                android:visibility="gone"
                android:layout_width="256dp"
                android:layout_height="256dp"
                app:cardCornerRadius="10dp">



            <ImageView
                    android:id="@+id/chatImageSent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/bg_match"
                    />
        </androidx.cardview.widget.CardView>


        <TextView
                android:id="@+id/chat_main_sent_message_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/app_text_black"
                android:textSize="13sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>