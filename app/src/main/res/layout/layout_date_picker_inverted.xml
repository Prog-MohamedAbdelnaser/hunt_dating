<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#33000000">

    <LinearLayout
            android:id="@+id/container_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:background="#f2f7fa"
            android:orientation="vertical">

        <RelativeLayout
                android:id="@+id/container_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5sp"
                android:paddingTop="2dp"
                android:paddingRight="5sp"
                android:paddingBottom="2dp">

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/btn_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5sp"
                    android:background="@null"
                    android:gravity="center"
                    android:textColor="@color/btn_cancel_color"
                    android:textSize="@dimen/btn_text_size"
                    tools:text="Cancel"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/btn_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5sp"
                    android:background="@null"
                    android:gravity="center"
                    android:textColor="@color/btn_confirm_color"
                    android:textSize="@dimen/btn_text_size"
                    tools:text="Done"/>

        </RelativeLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:background="#f2f7fa"
                android:padding="1dp">

            <com.recep.hunt.datePicker.datePickerView.DatePickerWheelView
                    android:id="@+id/datePickerWheelView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>