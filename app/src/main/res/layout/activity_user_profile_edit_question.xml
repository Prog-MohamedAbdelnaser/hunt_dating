<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/edit_questions_bg_color"
        tools:context=".profile.UserProfileEditQuestionActivity">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/user_edit_question_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/hunt_logo_white"/>

    <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="32dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_edit_question_toolbar">

        <ImageView
                android:id="@+id/edit_question_header_imageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/relationship_icon"
                android:tint="@color/white" />

        <TextView
                android:id="@+id/edit_profile_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="What's your relationship status"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="26sp" />

        <EditText
                android:id="@+id/user_profile_edit_question_editText"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/app_round_white_stroke_bg"
                android:fontFamily="@font/montserrat"
                android:hint="Enter your height in cm"
                android:inputType="number"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="18sp"
                android:visibility="gone" />
        <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/app_round_white_stroke_bg"
                android:layout_marginTop="24dp"
                android:id="@+id/save_height_btn"
                android:text="@string/save"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_medium"
                android:textAllCaps="false"
                android:textSize="17sp"
                android:visibility="gone"
                />


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/edit_questions_recyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>