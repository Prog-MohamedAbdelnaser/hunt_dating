<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".location.TurnOnGPSActivity">

    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            app:title=""
            app:navigationIcon="@drawable/hunt"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/montserrat_medium"
            app:titleTextColor="@color/light_grey_title"

            android:id="@+id/turn_on_gps_toolbar">

    </androidx.appcompat.widget.Toolbar>

    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/gps"
               android:layout_marginTop="36dp"
               app:layout_constraintTop_toBottomOf="@+id/turn_on_gps_toolbar"
               app:layout_constraintStart_toStartOf="parent"
               android:layout_marginLeft="8dp"
               android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
               android:layout_marginRight="8dp" android:id="@+id/imageView7"/>

    <TextView android:layout_width="wrap_content"
              android:text="@string/turn_on_gps"
              android:fontFamily="@font/montserrat_medium"
              android:textColor="@color/app_text_black"
              android:layout_height="wrap_content"
              android:textSize="24sp"
              android:id="@+id/textview2"
              app:layout_constraintEnd_toEndOf="@+id/imageView7"
              app:layout_constraintStart_toStartOf="@+id/imageView7" android:layout_marginTop="68dp"
              app:layout_constraintTop_toBottomOf="@+id/imageView7" app:layout_constraintHorizontal_bias="0.496"/>
    <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:id="@+id/textView7" app:layout_constraintEnd_toEndOf="@+id/textview2"
            android:layout_marginTop="20dp"
            android:textSize="13sp"
            android:textColor="@color/app_light_text_color"
            android:fontFamily="@font/montserrat"
            android:text="@string/open_the_location"
            app:layout_constraintStart_toStartOf="@+id/textview2" app:layout_constraintTop_toBottomOf="@+id/textview2"
            app:layout_constraintHorizontal_bias="0.493"/>

    <Button android:layout_width="match_parent"
            android:background="@drawable/rectangle_app_btn"
            android:layout_height="wrap_content"
            android:text="@string/turn_on_gps"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:fontFamily="@font/montserrat_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/lets_start_btn"
    />


</androidx.constraintlayout.widget.ConstraintLayout>