<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">


        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusableInTouchMode="true"
                android:paddingTop="30dp"
                android:paddingBottom="70dp"
                tools:context=".profile.UserProfileEditActivity">


            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivEditProfielId"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/boy_casual_eyes"
                    app:civ_border_color="@color/black"
                    app:civ_border_overlay="true"
                    app:civ_border_width="0dp"
                    app:layout_constraintBottom_toTopOf="@id/include_six_photos"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivPencilEditProfileId"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/partial_dark"
                    app:layout_constraintBottom_toBottomOf="@+id/ivEditProfielId"
                    app:layout_constraintLeft_toLeftOf="@+id/ivEditProfielId"
                    app:layout_constraintRight_toRightOf="@+id/ivEditProfielId"

                    />


            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivEditId"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_mode_edit_white_24dp"
                    app:layout_constraintRight_toLeftOf="@+id/change_pic_tv"

                    app:layout_constraintTop_toTopOf="@+id/ivPencilEditProfileId" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/change_pic_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/change_pic"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/ivEditId"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/ivPencilEditProfileId" />

            <!--                            </RelativeLayout>-->

            <!--                        </RelativeLayout>-->

            <!--                    </RelativeLayout>-->

            <!--                </RelativeLayout>-->


            <include
                    android:id="@+id/include_six_photos"
                    layout="@layout/six_photos_item_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ivEditProfielId" />


            <TextView
                    android:id="@+id/about_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/app_text_black"
                    android:textSize="13sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/include_six_photos" />


            <EditText
                    android:id="@+id/write_about_us_et"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:fontFamily="@font/montserrat"
                    android:hint="@string/write_about_you"
                    android:inputType="textMultiLine"
                    android:padding="16dp"
                    android:textColor="@color/app_light_text_color"
                    android:textSize="13sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/about_header" />

            <TextView
                    android:id="@+id/job_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:padding="16dp"
                    android:text="@string/job_title"
                    android:textColor="@color/app_text_black"
                    android:textSize="13sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/write_about_us_et" />


            <EditText
                    android:id="@+id/add_job_title_et"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:fontFamily="@font/montserrat"
                    android:hint="@string/add_job_title"
                    android:padding="16dp"
                    android:textColor="@color/app_light_text_color"
                    android:textSize="13sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/job_title_tv" />

            <TextView
                    android:id="@+id/company_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:padding="16dp"
                    android:text="@string/company"
                    android:textColor="@color/app_text_black"
                    android:textSize="13sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/add_job_title_et" />

            <EditText
                    android:id="@+id/add_company_name_et"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:fontFamily="@font/montserrat"
                    android:hint="@string/add_company_name"
                    android:padding="16dp"
                    android:textColor="@color/app_light_text_color"
                    android:textSize="13sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/company_tv" />

            <TextView
                    android:id="@+id/hometown_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:padding="16dp"
                    android:text="@string/hometown"
                    android:textColor="@color/app_text_black"
                    android:textSize="13sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/add_company_name_et" />

            <EditText
                    android:id="@+id/add_hometown_et"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:fontFamily="@font/montserrat"
                    android:hint="@string/add_home_town"
                    android:padding="16dp"
                    android:textColor="@color/app_light_text_color"
                    android:textSize="13sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/hometown_tv" />


            <TextView
                    android:id="@+id/school_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:padding="16dp"
                    android:text="@string/schooloruniversity"
                    android:textColor="@color/app_text_black"
                    android:textSize="13sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/add_hometown_et" />


            <EditText
                    android:id="@+id/add_school_or_university_et"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:fontFamily="@font/montserrat"
                    android:hint="@string/add_school_or_university"
                    android:padding="16dp"
                    android:textColor="@color/app_light_text_color"
                    android:textSize="13sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/school_tv" />

            <TextView
                    android:id="@+id/iam_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/montserrat"
                    android:padding="16dp"
                    android:text="@string/iam"
                    android:textColor="@color/app_text_black"
                    android:textSize="13sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/add_school_or_university_et" />

            <Button
                    android:id="@+id/edit_profile_male_gender_btn"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/profile_gender_unselected_btn"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/male"
                    android:textAllCaps="false"
                    android:textColor="@color/app_light_text_color"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/iam_tv" />

            <Button
                    android:id="@+id/edit_profile_female_gender_btn"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/profile_gender_unselected_btn"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/female"
                    android:textAllCaps="false"
                    android:textColor="@color/app_light_text_color"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="@+id/edit_profile_male_gender_btn"
                    app:layout_constraintStart_toEndOf="@+id/edit_profile_male_gender_btn"
                    app:layout_constraintTop_toTopOf="@+id/edit_profile_male_gender_btn" />

            <Button
                    android:id="@+id/edit_profile_other_gender_btn"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/profile_gender_unselected_btn"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/other"
                    android:textAllCaps="false"
                    android:textColor="@color/app_light_text_color"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="@+id/edit_profile_female_gender_btn"
                    app:layout_constraintStart_toEndOf="@+id/edit_profile_female_gender_btn"
                    app:layout_constraintTop_toTopOf="@+id/edit_profile_female_gender_btn" />

            <TextView
                    android:id="@+id/basic_info_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:padding="16dp"
                    android:text="@string/basic_info"
                    android:textColor="@color/app_text_black"
                    android:textSize="13sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edit_profile_male_gender_btn" />


            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/edit_profile_user_basic_details_recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/basic_info_tv" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

    <Button
            android:id="@+id/save_edit_profile_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/rectangle_app_btn"
            android:fontFamily="@font/montserrat"
            android:text="@string/save"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="17sp" />

</RelativeLayout>