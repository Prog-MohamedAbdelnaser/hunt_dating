<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".setupProfile.SetupProfileUploadPhotoActivity">
    <androidx.appcompat.widget.Toolbar
            android:id="@+id/setupProfileupload_pic__toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/setup_profile"
            app:titleTextColor="@color/app_text_black"
            app:navigationIcon="@drawable/ic_arrow_back_black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
    </androidx.appcompat.widget.Toolbar>

    <TextView
            android:text="@string/upload_photo"
            android:textColor="@color/app_text_black"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="22sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/setupProfileupload_pic__toolbar"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="24dp"/>

    <Button android:layout_width="match_parent"
            android:background="@drawable/rectangle_app_btn"
            android:layout_height="wrap_content"
            android:text="@string/next"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/setup_profile_upload_pic_next_btn"
    />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:background="@drawable/round_edit_text"
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/add_photo_layout"
            android:layout_height="300dp"
            android:layout_marginEnd="50dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/setup_profile_upload_pic_next_btn"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp">

        <ImageView android:layout_width="100dp"
                   android:layout_height="100dp"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   android:layout_marginLeft="8dp"
                   android:layout_marginStart="8dp"
                   android:src="@drawable/ic_add_black"
                   android:tint="@color/app_text_black"
                   android:padding="18dp"
                   app:layout_constraintEnd_toEndOf="parent"
                   android:background="@drawable/upload_profile_bg"
                   android:layout_marginEnd="8dp"
                   android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
                   app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/imageView5"/>
        <TextView
                android:text="@string/add_photo"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView5"
                app:layout_constraintStart_toStartOf="@+id/imageView5"
                app:layout_constraintEnd_toEndOf="@+id/imageView5"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>