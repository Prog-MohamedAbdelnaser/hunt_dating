<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorCretorBackground"
        tools:context=".creator.CreatorActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/home_toolbar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <ImageView
                android:id="@+id/home_filter_btn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_setting_white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <ImageView
                android:id="@+id/home_incoginoti_btn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/home_filter_btn"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_setting_filter_white" />

        <ImageView
                android:id="@+id/home_notification_btn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/home_incoginoti_btn"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_setting_notification_white" />

        <ImageView
                android:id="@+id/home_profile_btn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/home_notification_btn"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_setting_profile_white" />

        <ImageView
                android:id="@+id/textView34"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/hunt_logo_white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/question_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            android:padding="12dp"
            app:layout_constraintBottom_toTopOf="@+id/ProgressBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_toolbar" />





    <Button
            android:id="@+id/btnDontHaveAnIdea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="64dp"
            android:layout_marginLeft="48dp"
            android:visibility="gone"
            android:layout_marginRight="48dp"
            android:background="@drawable/bg_option_white_button"
            android:gravity="center"
            android:padding="12dp"
            android:text="I don't have an idea"
            android:textColor="#3C4A6D"
            app:cornerRadius="18dp"
            app:layout_constraintBottom_toTopOf="@+id/login_nxt_btn"
            app:layout_constraintStart_toStartOf="parent"

            app:strokeColor="@color/white"
            app:strokeWidth="100dp" />


    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_progress_bar"
            android:layout_width="100dp"

            android:layout_height="100dp"
            android:layout_marginBottom="36dp"
            app:layout_constraintBottom_toTopOf="@+id/login_nxt_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        <ProgressBar
                android:id="@+id/otp_progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:indeterminate="false" />

        <TextView
                android:id="@+id/otp_progrss_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="60"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="@+id/otp_progressBar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/otp_progressBar"
                app:layout_constraintTop_toTopOf="@+id/otp_progressBar" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <Button
            android:id="@+id/login_nxt_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/rectangle_app_btn"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/next"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>