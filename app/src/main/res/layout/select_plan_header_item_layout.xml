<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">
    <TextView
            android:layout_width="match_parent"
            android:text="@string/select_a_plan"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="17sp"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            android:textAllCaps="true"
            android:textColor="@color/app_text_black"
            android:layout_height="wrap_content"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
                android:id="@+id/six_months_card"
                android:layout_width="130dp"
                android:layout_height="143dp"
                android:elevation="14dp"
                android:layout_marginBottom="16dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                app:cardCornerRadius="8dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/six_month_card_bg"
                    android:gravity="center"
                    android:orientation="vertical">


                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="@string/six_months"
                        android:textAlignment="center"
                        android:textColor="@color/pink"
                        android:textSize="24sp" />

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:text="@string/months"
                        android:textAlignment="center"
                        android:textColor="@color/pink"
                        android:textSize="15sp" />

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/six_months_price"
                        android:fontFamily="@font/montserrat"
                        android:textAlignment="center"
                        android:textColor="@color/pink" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <Button
                android:id="@+id/exclusive_btn"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/exlusive_button_bg"
                android:text="@string/exclusive"
                android:textSize="12sp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:fontFamily="@font/montserrat_medium"
                android:layout_marginBottom="-30dp"
                android:layout_above="@id/six_months_card"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white" />

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/six_months_card"
                android:layout_alignBottom="@+id/six_months_card"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="-6dp"
                android:layout_marginRight="-6dp"
                android:layout_marginBottom="8dp"
                android:layout_toStartOf="@+id/six_months_card"
                android:layout_toLeftOf="@+id/six_months_card"
                android:background="@drawable/other_month_bg"
                android:orientation="vertical"
                android:gravity="center">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/one_month"
                    android:textAlignment="center"
                    android:textColor="@color/app_text_black"
                    android:textSize="24sp" />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/month"
                    android:textAlignment="center"
                    android:textColor="@color/app_text_black"
                    android:textSize="15sp" />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/one_month_price"
                    android:textSize="13sp"
                    android:fontFamily="@font/montserrat"
                    android:textAlignment="center"
                    android:textColor="@color/app_text_black" />


        </LinearLayout>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/six_months_card"
                android:layout_alignBottom="@+id/six_months_card"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_toEndOf="@id/six_months_card"
                android:layout_toRightOf="@id/six_months_card"
                android:layout_centerVertical="true"
                android:layout_marginStart="-6dp"
                android:layout_marginLeft="-6dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/other_month_bg"
                android:orientation="vertical"
                android:gravity="center">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/twelve_months"
                    android:textAlignment="center"
                    android:textColor="@color/app_text_black"
                    android:textSize="24sp" />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/months"
                    android:textAlignment="center"
                    android:textColor="@color/app_text_black"
                    android:textSize="15sp" />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/tweleve_months_price"
                    android:textSize="13sp"
                    android:fontFamily="@font/montserrat"
                    android:textAlignment="center"
                    android:textColor="@color/app_text_black" />


        </LinearLayout>

    </RelativeLayout>

    <Button
            android:id="@+id/get_hunt_premium_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/app_btn_round"
            android:text="@string/get_hunt_premium"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:fontFamily="@font/montserrat_medium"
            android:layout_margin="16dp"
            />

</LinearLayout>