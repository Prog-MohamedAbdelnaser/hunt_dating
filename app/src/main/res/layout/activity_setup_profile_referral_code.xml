<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".setupProfile.SetupProfileReferralCodeActivity"
>
    <androidx.appcompat.widget.Toolbar
            android:id="@+id/setupProfile_code__toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/referral_code"
            app:titleTextColor="@color/app_text_black"
            app:navigationIcon="@drawable/ic_arrow_back_black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
    </androidx.appcompat.widget.Toolbar>

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="0dp"
                                                       android:padding="10dp"
                                                       app:layout_constraintBottom_toBottomOf="parent"
                                                       app:layout_constraintTop_toBottomOf="@id/setupProfile_code__toolbar"
                                                       android:layout_marginBottom="4dp"
                                                       tools:layout_editor_absoluteX="-9dp"
                                                       app:layout_constraintVertical_bias="1.0">

        <EditText

                android:textColor="@color/app_text_black"
                android:fontFamily="@font/montserrat_medium"
                android:textSize="22sp"
                android:padding="20dp"
                android:background="@drawable/edit_text_round"
                android:hint="@string/referral_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:singleLine="true"
                android:textAlignment="center"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="68dp" app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:text="@string/enter_referral"
                android:layout_width="306dp"
                android:layout_height="44dp" android:id="@+id/textView6"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textAlignment="center"
                app:layout_constraintHorizontal_bias="0.468" android:layout_marginTop="88dp"
                app:layout_constraintTop_toBottomOf="@+id/textView2"/>
        <Button
                android:text="@string/check_code"
                android:fontFamily="@font/montserrat_medium"
                android:textAllCaps="false"
                android:padding="20dp"
                android:textSize="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/check_code_btn"
                android:textColor="@color/white"
                android:background="@drawable/app_btn_round"
                app:layout_constraintEnd_toEndOf="@+id/textView6"
                app:layout_constraintStart_toStartOf="@+id/textView6" android:layout_marginTop="68dp"
                app:layout_constraintTop_toBottomOf="@+id/textView6" app:layout_constraintHorizontal_bias="0.488"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>