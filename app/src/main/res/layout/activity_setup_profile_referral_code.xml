<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".setupProfile.SetupProfileReferralCodeActivity"
>
    <androidx.appcompat.widget.Toolbar
            android:id="@+id/setupProfile_code__toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/referral_code"
            style="@style/AppToolbar"
            app:titleTextColor="@color/app_text_black"
            app:navigationIcon="@drawable/ic_arrow_back_black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/setupProfile_code__toolbar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            android:orientation="vertical"
            android:layout_marginRight="24dp">

        <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="@string/referral_code"
                android:textSize="17sp"
                android:fontFamily="@font/montserrat_medium"
                android:textAlignment="center"
                android:background="@drawable/round_edit_text"
                android:textColorHint="@color/app_light_text_color"
        />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/enter_referral"
                android:textAlignment="center"
                android:textSize="15sp"
                android:fontFamily="@font/montserrat"
                android:layout_marginTop="51dp"
                android:layout_margin="36dp"
        />
        <Button
                android:id="@+id/check_code_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/app_btn_round"
                android:textSize="15sp"
                android:text="@string/check_code"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat"
                android:textAllCaps="false"
                android:layout_marginTop="30dp"
        />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>