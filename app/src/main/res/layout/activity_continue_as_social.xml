<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:src="@drawable/ic_arrow_back_black"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/continue_social_back_btn"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/continue_social_back_btn"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/relativeLayout">

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/continue_as_user_imageView"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/boy_casual_eyes"
                android:layout_centerInParent="true"
                android:background="@drawable/fb_bg_color"
                app:civ_border_width="4dp"
                app:civ_border_color="@color/white"

        />
        <ImageView
                android:id="@+id/continue_as_social_image"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:background="@drawable/insta_bg_image"
                android:scaleType="fitCenter"
                android:src="@drawable/insta_icon"
                android:layout_alignEnd="@id/continue_as_user_imageView"
                android:layout_alignRight="@id/continue_as_user_imageView"
                android:layout_marginRight="100dp"
                android:layout_marginEnd="100dp"
                android:layout_centerVertical="true"
                android:padding="38dp"
        />

    </RelativeLayout>
    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
            android:layout_marginBottom="8dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
    >

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="@string/continue_as"
                  android:textColor="@color/app_text_black"
                  android:textSize="26sp"
                  android:textAlignment="center"
                  android:layout_marginTop="46dp"
                  android:id="@+id/continue_as_username_txtView"
                  android:fontFamily="@font/montserrat_semibold"
        />
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="@string/hunt_will_user"
                  android:textAlignment="center"
                  android:textSize="15sp"
                  android:fontFamily="@font/montserrat_medium"
                  android:layout_marginTop="8dp"
        />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/profile_details_used"
                android:textAlignment="center"
                android:layout_marginTop="30dp"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/app_light_text_color"
                android:layout_marginStart="26dp"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                android:layout_marginEnd="26dp"
        />

        <Button
                android:id="@+id/edit_this_continue_as_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_this"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:textColor="#326CFE"
                android:drawableStart="@drawable/edit_icon"
                android:drawableLeft="@drawable/edit_icon"
                android:drawablePadding="8dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
        />

    </LinearLayout>

    <Button android:layout_width="match_parent"
            android:background="@drawable/rectangle_app_btn"
            android:layout_height="wrap_content"
            android:text="@string/continuee"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/continue_as_social_nextBtn"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/we_will_never_post"
            android:layout_gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/continue_as_social_nextBtn"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:id="@+id/textView5"/>

</androidx.constraintlayout.widget.ConstraintLayout>