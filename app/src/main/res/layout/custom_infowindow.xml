<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
        >

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clInfoId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/info_window_box"
            android:padding="8dp"
            android:layout_alignParentRight="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            >

        <ImageView
                android:id="@+id/info_window_rest_image"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                tools:src="@drawable/ic_img_location_placeholder"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

        <TextView
                android:id="@+id/info_window_rest_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="TextView"
                android:textColor="@color/app_text_black"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/info_window_rest_image"
                app:layout_constraintTop_toTopOf="@+id/info_window_rest_image"/>

        <ImageView
                android:id="@+id/imageView19"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_info_window_user"
                app:layout_constraintStart_toStartOf="@+id/info_window_rest_name"
                app:layout_constraintTop_toBottomOf="@+id/info_window_rest_name"/>

        <TextView
                android:id="@+id/textView30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/montserrat"
                android:text="20"
                android:textColor="#F1892A"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView19"
                app:layout_constraintStart_toEndOf="@+id/imageView19"
                app:layout_constraintTop_toTopOf="@+id/imageView19" />

        <ImageView
                android:id="@+id/imageView20"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_info_window_loccation"
                app:layout_constraintStart_toEndOf="@+id/textView30"
                app:layout_constraintTop_toBottomOf="@+id/info_window_rest_name" />

        <TextView
                android:id="@+id/textView31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:fontFamily="@font/montserrat"
                android:text="100 M"
                android:textColor="#F1892A"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView20"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView20"
                app:layout_constraintTop_toTopOf="@+id/imageView20" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:layout_marginTop="-5dp"
            android:src="@drawable/tooltip"
            android:layout_below="@id/clInfoId"
            android:layout_alignLeft="@id/clInfoId"/>

</RelativeLayout>