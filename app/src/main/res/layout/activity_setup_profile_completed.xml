<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".setupProfile.SetupProfileCompletedActivity">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/completed_profile_user_image"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/boy_casual_eyes"
            app:civ_border_color="@color/white"
            app:civ_border_width="4dp"
            app:layout_constraintBottom_toTopOf="@id/lottieAnimationView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.512"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.325" />

    <TextView
            android:text="Rishabh Shukla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_completed_profile_name"
            android:layout_marginTop="24dp"
            android:textSize="22sp"
            android:textColor="@color/app_text_black"
            android:fontFamily="@font/montserrat_medium"
            app:layout_constraintTop_toBottomOf="@+id/completed_profile_user_image"
            app:layout_constraintStart_toStartOf="@+id/completed_profile_user_image"
            app:layout_constraintEnd_toEndOf="@+id/completed_profile_user_image"
            app:layout_constraintBottom_toTopOf="@id/lottieAnimationView"
        />

    <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieAnimationView"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginTop="24dp"
            app:lottie_fileName="success_animation.json"
            app:lottie_loop="false"
            app:layout_constraintTop_toBottomOf="@+id/user_completed_profile_name"
            app:layout_constraintStart_toStartOf="@+id/user_completed_profile_name"
            app:layout_constraintEnd_toEndOf="@+id/user_completed_profile_name"
            app:layout_constraintBottom_toTopOf="@id/textView8"/>
    <TextView
            android:text="@string/thank_you"
            android:textColor="@color/pink"
            android:textSize="26sp"
            android:fontFamily="@font/montserrat_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/lottieAnimationView"
            app:layout_constraintEnd_toEndOf="@+id/lottieAnimationView"
            app:layout_constraintStart_toStartOf="@+id/lottieAnimationView"
            app:layout_constraintBottom_toTopOf="@id/textView9"/>
    <TextView
            android:text="@string/you_have_completed"
            android:textAlignment="center"
            android:textSize="18sp"
            android:fontFamily="@font/montserrat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:textColor="@color/app_light_text_color"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            app:layout_constraintStart_toStartOf="@+id/textView8"
            app:layout_constraintEnd_toEndOf="@+id/textView8"
            app:layout_constraintBottom_toTopOf="@id/lets_start_btn"/>

    <Button android:layout_width="match_parent"
            android:background="@drawable/rectangle_app_btn"
            android:layout_height="60dp"
            android:text="@string/lets_start"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_medium"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/lets_start_btn"
    />

</androidx.constraintlayout.widget.ConstraintLayout>