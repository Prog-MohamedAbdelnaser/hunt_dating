<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".setupProfile.SetupProfileUploadPhotoStep2Activity">

    <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/upload_photo"
            android:textAlignment="center"
            android:textColor="@color/app_text_black"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout android:layout_width="match_parent"
                  app:layout_constraintTop_toBottomOf="@+id/textView2"
                  android:layout_height="wrap_content"

                  android:gravity="center_horizontal"
    >

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="150dp"
                android:background="@drawable/round_edit_text"
                android:foreground="?android:attr/selectableItemBackground"
                android:id="@+id/gallery_layout"
                android:layout_height="150dp"
                android:clickable="true"

                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/setup_profile_upload_pic_next_btn"
                app:layout_constraintVertical_bias="0.246" android:layout_marginTop="84dp"
                app:layout_constraintStart_toStartOf="parent"
        >

            <ImageView android:layout_width="36dp"
                       android:layout_height="32dp"
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintStart_toStartOf="parent"
                       android:layout_marginLeft="8dp"
                       android:layout_marginStart="8dp"
                       android:src="@drawable/ic_add_black"
                       android:tint="@color/app_text_black"
                       android:padding="18dp"
                       app:layout_constraintEnd_toEndOf="parent"
                       android:background="@drawable/ic_img_gallery"
                       android:layout_marginEnd="8dp"
                       android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
                       app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/imageView5"
                       app:layout_constraintVertical_bias="0.4"/>
            <TextView
                    android:text="@string/gallery"
                    android:textSize="16sp"
                    android:fontFamily="@font/montserrat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/imageView5"
                    app:layout_constraintStart_toStartOf="@+id/imageView5"
                    app:layout_constraintEnd_toEndOf="@+id/imageView5"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="150dp"
                android:background="@drawable/round_edit_text"
                android:foreground="?android:attr/selectableItemBackground"
                android:id="@+id/camera_layout"
                android:layout_height="150dp"
                android:clickable="true"
                android:layout_marginLeft="24dp" android:layout_marginStart="24dp"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/setup_profile_upload_pic_next_btn"
                app:layout_constraintVertical_bias="0.246" app:layout_constraintStart_toEndOf="@+id/gallery_layout"
                android:layout_marginTop="84dp">

            <ImageView android:layout_width="36dp"
                       android:layout_height="32dp"
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintStart_toStartOf="parent"
                       android:layout_marginLeft="8dp"
                       android:layout_marginStart="8dp"
                       android:src="@drawable/ic_add_black"
                       android:tint="@color/app_text_black"
                       android:padding="18dp"
                       app:layout_constraintEnd_toEndOf="parent"
                       android:background="@drawable/ic_camera"
                       android:layout_marginEnd="8dp"
                       android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
                       app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/imageView6"
                       app:layout_constraintVertical_bias="0.4"/>
            <TextView
                    android:text="@string/camera"
                    android:textSize="16sp"
                    android:fontFamily="@font/montserrat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/imageView6"
                    app:layout_constraintStart_toStartOf="@+id/imageView6"
                    app:layout_constraintEnd_toEndOf="@+id/imageView6"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>