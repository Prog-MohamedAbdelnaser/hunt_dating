<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".login.OtpVerificationActivity">
<androidx.constraintlayout.widget.ConstraintLayout
         android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/otp_verification_view_id"
android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:navigationIcon="@drawable/ic_arrow_back_black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/montserrat_medium"
            app:titleTextColor="@color/light_grey_title"

            android:id="@+id/toolbar">
        <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/light_grey_title"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_gravity="center"
                android:text="@string/verification"/>
    </androidx.appcompat.widget.Toolbar>

    <com.goodiebag.pinview.Pinview
            android:id="@+id/otp_pin_view"
            app:pinBackground="@drawable/otp_pin_bg"
            android:layout_width="0dp"
            android:layout_height="60dp"
            app:pinHeight="42dp"
            app:pinWidth="42dp"
            app:pinLength="6"
            app:hint="0"
            app:cursorVisible="true"
            app:forceKeyboard="false"
            app:inputType="number"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="24dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="24dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:password="false"
            android:layout_marginStart="24dp"/>

    <TextView
            android:id="@+id/resend_otp_btn"
            android:layout_width="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="@string/didnt_recive_otp"
            android:fontFamily="@font/montserrat_medium"
            android:textAllCaps="false"
            android:textColor="@color/light_grey"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/otp_pin_view"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"

            android:layout_marginTop="24dp"/>


    <TextView
            android:id="@+id/we_will_send_you_otp_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/montserrat_medium"
            android:lines="2"
            android:text="@string/we_will_send_other_otp"
            android:textAlignment="center"
            android:textColor="@color/light_grey"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/resend_otp_btn" />

    <Button
            android:id="@+id/send_otp_again_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/app_btn_round"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/send_again"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/we_will_send_you_otp_tv"
            app:layout_constraintStart_toStartOf="@+id/we_will_send_you_otp_tv"
            app:layout_constraintTop_toBottomOf="@+id/we_will_send_you_otp_tv" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_progress_bar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="@+id/resend_otp_btn"
            app:layout_constraintStart_toStartOf="@+id/resend_otp_btn"
            app:layout_constraintTop_toBottomOf="@+id/resend_otp_btn">

        <ProgressBar
                android:id="@+id/otp_progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:indeterminate="false" />

        <TextView
                android:id="@+id/otp_progrss_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserrat"
                android:text="60"
                android:textColor="@color/colorProgressbar"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="@+id/otp_progressBar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/otp_progressBar"
                app:layout_constraintTop_toTopOf="@+id/otp_progressBar" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>