<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/otp_verification_view_id"
        tools:context=".login.OtpVerificationActivity"
        android:background="@color/white">
    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:navigationIcon="@drawable/ic_arrow_back_black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/montserrat_medium"
            app:titleTextColor="@color/light_grey_title"

            android:id="@+id/toolbar">
        <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/light_grey_title"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_gravity="center"
                android:text="@string/verification"/>
    </androidx.appcompat.widget.Toolbar>

    <com.goodiebag.pinview.Pinview

            android:id="@+id/otp_pin_view"
            app:pinBackground="@drawable/otp_pin_bg"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:pinWidth="60dp"
            app:pinHeight="60dp"
            app:pinLength="4"
            app:cursorVisible="true"
            app:forceKeyboard="true"
            app:hint="0"
            app:inputType="number"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:password="false"/>

   <!-- <com.mukesh.OtpView
            android:id="@+id/otp_pin_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textColor="@color/mytransparentblack"
            app:itemCount="4"
            app:itemWidth="60dp"
            app:itemHeight="60dp"
            app:itemRadius="30dp"
