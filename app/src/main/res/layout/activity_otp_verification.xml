    <TextView
            android:id="@+id/resend_otp_btn"
            android:layout_width="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="@string/didnt_recive_otp"
            android:fontFamily="@font/montserrat_medium"
            android:textAllCaps="false"
            android:textColor="@color/light_grey"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/otp_pin_view"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"

            android:layout_marginTop="24dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/resend_otp_btn"
            app:layout_constraintStart_toStartOf="@+id/resend_otp_btn"
            app:layout_constraintEnd_toEndOf="@+id/resend_otp_btn"
            android:layout_marginTop="16dp"
            android:id="@+id/cl_we_will_send_otp"
            android:visibility="gone">


        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:lines="2"
                  android:textColor="@color/light_grey"
                  android:text="@string/we_will_send_other_otp"
                  android:textSize="13sp"
                  android:fontFamily="@font/montserrat_medium"
                  android:textAlignment="center"
                  android:layout_marginTop="16dp"
                  app:layout_constraintTop_toBottomOf="@+id/textView"
                  android:id="@+id/we_will_send_you_otp_tv" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
                  android:layout_marginRight="32dp" android:layout_marginStart="32dp"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"/>
        <Button
                android:text="@string/resend_code"
                android:fontFamily="@font/montserrat_medium"
                android:textAllCaps="false"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/sendButton"
                android:textColor="@color/white"
                android:background="@drawable/app_btn_round"
                app:layout_constraintTop_toBottomOf="@+id/we_will_send_you_otp_tv"
                app:layout_constraintStart_toStartOf="@+id/we_will_send_you_otp_tv"
                app:layout_constraintEnd_toEndOf="@+id/we_will_send_you_otp_tv" android:layout_marginBottom="32dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="16dp"
                android:layout_marginRight="16dp" android:layout_marginEnd="16dp" android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>




    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@+id/resend_otp_btn"
            app:layout_constraintStart_toStartOf="@+id/resend_otp_btn"
            app:layout_constraintEnd_toEndOf="@+id/resend_otp_btn"
            android:layout_marginTop="16dp"
            android:id="@+id/cl_progress_bar"
           >

        <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:indeterminate="false"
                android:id="@+id/otp_progressBar"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="60"
                android:id="@+id/otp_progrss_txt"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="22sp"
                app:layout_constraintTop_toTopOf="@+id/otp_progressBar" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="@+id/otp_progressBar" android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/otp_progressBar"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
