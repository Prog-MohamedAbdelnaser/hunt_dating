<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".login.InfoYouProvideActivity">
    <androidx.appcompat.widget.Toolbar
            android:id="@+id/info_you_provide_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/info_you_provide"
            app:titleTextColor="@color/app_text_black"
            app:navigationIcon="@drawable/ic_arrow_back_black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="parent">
    </androidx.appcompat.widget.Toolbar>


    <ScrollView android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/info_you_provide_toolbar"
                app:layout_constraintBottom_toTopOf="@+id/textView5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_height="wrap_content">
                <View android:layout_width="match_parent"
                      android:layout_height="1dp"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintStart_toStartOf="parent"
                      android:layout_marginLeft="8dp"
                      android:layout_marginStart="8dp"
                      app:layout_constraintEnd_toEndOf="parent"
                      android:background="@color/seprator_color"
                      android:layout_marginEnd="8dp"
                      android:layout_marginRight="8dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/name_and_profile_pic"
                        android:textSize="15sp"
                        android:fontFamily="@font/montserrat_medium"
                        android:textColor="@color/app_text_black"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginLeft="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="16dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/required"
                        android:textAllCaps="true"
                        android:textSize="14sp"
                        android:fontFamily="@font/montserrat_medium"
                        android:textColor="@color/light_grey"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginRight="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="16dp"/>


            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_height="wrap_content">
                <View android:layout_width="match_parent"
                      android:layout_height="1dp"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintStart_toStartOf="parent"
                      android:layout_marginLeft="8dp"
                      android:layout_marginStart="8dp"
                      app:layout_constraintEnd_toEndOf="parent"
                      android:background="@color/seprator_color"
                      android:layout_marginEnd="8dp"
                      android:layout_marginRight="8dp"/>
                <TextView
                        android:id="@+id/txt1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/friend_list"
                        android:textSize="15sp"
                        android:fontFamily="@font/montserrat_medium"
                        android:textColor="@color/app_text_black"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginLeft="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="16dp"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/friend_list_description"
                        android:textAllCaps="true"
                        android:textSize="12sp"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/light_grey"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginLeft="16dp"
                        app:layout_constraintTop_toBottomOf="@id/txt1"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                        app:layout_constraintEnd_toStartOf="@+id/friend_list_switch"/>

                <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp"
                        android:checked="true"
                        android:layout_marginRight="16dp"
                        android:id="@+id/friend_list_switch"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toTopOf="parent"/>


            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_height="wrap_content">
                <View android:layout_width="match_parent"
                      android:layout_height="1dp"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintStart_toStartOf="parent"
                      android:layout_marginLeft="8dp"
                      android:layout_marginStart="8dp"
                      app:layout_constraintEnd_toEndOf="parent"
                      android:background="@color/seprator_color"
                      android:layout_marginEnd="8dp"
                      android:layout_marginRight="8dp"/>
                <TextView
                        android:id="@+id/txt3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/birthday"
                        android:textSize="15sp"
                        android:fontFamily="@font/montserrat_medium"
                        android:textColor="@color/app_text_black"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginLeft="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="16dp"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/birthday_description"
                        android:textAllCaps="true"
                        android:textSize="12sp"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/light_grey"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginLeft="16dp"
                        app:layout_constraintTop_toBottomOf="@id/txt3"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                        app:layout_constraintEnd_toStartOf="@+id/birthday_switch"/>

                <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:checked="true"

                        android:id="@+id/birthday_switch"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toTopOf="parent"/>


            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_height="wrap_content">
                <View android:layout_width="match_parent"
                      android:layout_height="1dp"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintStart_toStartOf="parent"
                      android:layout_marginLeft="8dp"
                      android:layout_marginStart="8dp"
                      app:layout_constraintEnd_toEndOf="parent"
                      android:background="@color/seprator_color"
                      android:layout_marginEnd="8dp"
                      android:layout_marginRight="8dp"/>
                <TextView
                        android:id="@+id/txt4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hometown"
                        android:textSize="15sp"
                        android:fontFamily="@font/montserrat_medium"
                        android:textColor="@color/app_text_black"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginLeft="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="16dp"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/home_town_description"
                        android:textAllCaps="true"
                        android:textSize="12sp"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/light_grey"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginLeft="16dp"
                        app:layout_constraintTop_toBottomOf="@id/txt4"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        app:layout_constraintEnd_toStartOf="@+id/hometown_switch"/>

                <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp"
                        android:checked="true"
                        android:layout_marginRight="16dp"
                        android:id="@+id/hometown_switch"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toTopOf="parent"/>


            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_height="wrap_content">
                <View android:layout_width="match_parent"
                      android:layout_height="1dp"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintStart_toStartOf="parent"
                      android:layout_marginLeft="8dp"
                      android:layout_marginStart="8dp"
                      app:layout_constraintEnd_toEndOf="parent"
                      android:background="@color/seprator_color"
                      android:layout_marginEnd="8dp"
                      android:layout_marginRight="8dp"/>
                <TextView
                        android:id="@+id/txt5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/photos"
                        android:textSize="15sp"
                        android:fontFamily="@font/montserrat_medium"
                        android:textColor="@color/app_text_black"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginLeft="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="16dp"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/photos_description"
                        android:textAllCaps="true"
                        android:textSize="12sp"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/light_grey"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginLeft="16dp"
                        app:layout_constraintTop_toBottomOf="@id/txt5"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                        app:layout_constraintEnd_toStartOf="@+id/photos_switch"/>

                <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp"
                        android:checked="true"

                        android:layout_marginRight="16dp"
                        android:id="@+id/photos_switch"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toTopOf="parent"/>


            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_height="wrap_content">
                <View android:layout_width="match_parent"
                      android:layout_height="1dp"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintStart_toStartOf="parent"
                      android:layout_marginLeft="8dp"
                      android:layout_marginStart="8dp"
                      app:layout_constraintEnd_toEndOf="parent"
                      android:background="@color/seprator_color"
                      android:layout_marginEnd="8dp"
                      android:layout_marginRight="8dp"/>
                <TextView
                        android:id="@+id/txt6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/page_likes"
                        android:textSize="15sp"
                        android:fontFamily="@font/montserrat_medium"
                        android:textColor="@color/app_text_black"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginLeft="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="16dp"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/page_likes_description"
                        android:textAllCaps="true"
                        android:textSize="12sp"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/light_grey"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginLeft="16dp"
                        app:layout_constraintTop_toBottomOf="@id/txt6"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                        app:layout_constraintEnd_toStartOf="@+id/page_like_switch"/>

                <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:checked="true"

                        android:id="@+id/page_like_switch"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toTopOf="parent"/>


            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_height="wrap_content">
                <View android:layout_width="match_parent"
                      android:layout_height="1dp"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintStart_toStartOf="parent"
                      android:layout_marginLeft="8dp"
                      android:layout_marginStart="8dp"
                      app:layout_constraintEnd_toEndOf="parent"
                      android:background="@color/seprator_color"
                      android:layout_marginEnd="8dp"
                      android:layout_marginRight="8dp"/>
                <TextView
                        android:id="@+id/txt7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/gender"
                        android:textSize="15sp"
                        android:fontFamily="@font/montserrat_medium"
                        android:textColor="@color/app_text_black"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginLeft="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="16dp"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/gender_description"
                        android:textAllCaps="true"
                        android:textSize="12sp"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/light_grey"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginLeft="16dp"
                        app:layout_constraintTop_toBottomOf="@id/txt7"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                        app:layout_constraintEnd_toStartOf="@+id/gender_switch"/>

                <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp"
                        android:checked="true"
                        android:layout_marginRight="16dp"
                        android:id="@+id/gender_switch"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toTopOf="parent"/>


            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_height="wrap_content">
                <View android:layout_width="match_parent"
                      android:layout_height="1dp"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintStart_toStartOf="parent"
                      android:layout_marginLeft="8dp"
                      android:layout_marginStart="8dp"
                      app:layout_constraintEnd_toEndOf="parent"
                      android:background="@color/seprator_color"
                      android:layout_marginEnd="8dp"
                      android:layout_marginRight="8dp"/>
                <TextView
                        android:id="@+id/txt10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/email_address"
                        android:textSize="15sp"
                        android:fontFamily="@font/montserrat_medium"
                        android:textColor="@color/app_text_black"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginLeft="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="16dp"/>
                <TextView
                        android:id="@+id/txtEmail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/email_address_description"
                        android:textAllCaps="true"
                        android:textSize="12sp"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/light_grey"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginLeft="16dp"
                        app:layout_constraintTop_toBottomOf="@id/txt10"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                        app:layout_constraintEnd_toStartOf="@+id/txt10_switch"/>

                <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:id="@+id/txt10_switch"
                        android:checked="true"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toTopOf="parent"/>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

    </ScrollView>



    <Button android:layout_width="match_parent"
            android:background="@drawable/rectangle_app_btn"
            android:layout_height="wrap_content"
            android:text="@string/continuee"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/full_name_next_btn"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/we_will_never_post"
            android:layout_gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/full_name_next_btn" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:id="@+id/textView5"/>

</androidx.constraintlayout.widget.ConstraintLayout>