<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/resent_otp"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/app_text_black"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="18sp"
                android:id="@+id/textView"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:lines="2"
                  android:textColor="@color/app_text_black"
                  android:text="@string/we_will_send_other_otp"
                  android:textSize="13sp"
                  android:fontFamily="@font/montserrat_medium"
                  android:textAlignment="center"
                  android:layout_marginTop="16dp"
                  app:layout_constraintTop_toBottomOf="@+id/textView"
                  android:id="@+id/we_will_send_you_otp_tv" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
                  android:layout_marginRight="32dp" android:layout_marginStart="32dp"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"/>
        <Button
                android:text="@string/send_again"
                android:fontFamily="@font/montserrat_medium"
                android:textAllCaps="false"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/button"
                android:textColor="@color/white"
                android:background="@drawable/app_btn_round"
                app:layout_constraintTop_toBottomOf="@+id/we_will_send_you_otp_tv"
                app:layout_constraintStart_toStartOf="@+id/we_will_send_you_otp_tv"
                app:layout_constraintEnd_toEndOf="@+id/we_will_send_you_otp_tv" android:layout_marginBottom="32dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="16dp"
                android:layout_marginRight="16dp" android:layout_marginEnd="16dp" android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>