<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="25dp"
        android:layout_height="wrap_content">

<androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        app:cardCornerRadius="25dp"
        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="356dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/ivClose"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_marginRight="26dp"
                android:foregroundGravity=""
                android:src="@drawable/ic_close_black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <ImageView
                android:id="@+id/imLogo"
                android:layout_width="116dp"
                android:layout_height="92dp"
                android:src="@drawable/hunt_small_iccon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivClose" />

        <LinearLayout
                android:id="@+id/linearLayout17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="24dp"
                android:orientation="horizontal"
                android:weightSum="5"
                app:layout_constraintEnd_toEndOf="@+id/imLogo"
                app:layout_constraintStart_toStartOf="@+id/imLogo"
                app:layout_constraintTop_toBottomOf="@+id/imLogo">

            <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_star" />

            <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_star" />

            <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_star" />

            <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_star" />

            <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_star" />

        </LinearLayout>

        <TextView
                android:id="@+id/textView36"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Enjoy Hunting?"
                android:textSize="24dp"

                android:textColor="#3c4a6d"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/imLogo"
                app:layout_constraintStart_toStartOf="@+id/imLogo"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout17" />

        <TextView
                android:id="@+id/tvHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:singleLine="false"
                android:textColor="#BAC0CB"
                android:text="Recommend us by rating Hunt on the Play Store"
                android:textSize="16dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                app:layout_constraintEnd_toEndOf="@+id/imLogo"
                app:layout_constraintStart_toStartOf="@+id/imLogo"
                app:layout_constraintTop_toBottomOf="@+id/textView36" />


        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_marginTop="18dp"
                android:orientation="horizontal"
                android:id="@+id/lytGiveRate"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvHint" >

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ff9057"

                    android:text="Rate us"
                    android:gravity="center"
                      android:layout_gravity="center"
                    android:textColor="@color/white"
                   android:textSize="18dp"/>

        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>