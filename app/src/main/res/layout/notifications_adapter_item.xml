<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/notifi_userImage"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/notifi_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/montserrat"
            android:text="TextView"
            android:textColor="@color/app_text_black"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/notifi_userImage"
            app:layout_constraintTop_toTopOf="@+id/notifi_userImage" />

    <TextView
            android:id="@+id/notifi_userNotification"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:fontFamily="@font/montserrat"
            android:text="You and Stella like each Other !"
            android:textColor="@color/app_light_text_color"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/notifi_userName"
            app:layout_constraintTop_toBottomOf="@+id/notifi_userName" />

    <TextView
            android:id="@+id/notification_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:gravity="end"
            android:text="TextView"
            android:fontFamily="@font/montserrat"
            android:textSize="12sp"
            android:textColor="@color/app_light_text_color"
            android:textAlignment="textEnd"
            app:layout_constraintBottom_toBottomOf="@+id/notifi_userName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/notifi_userName"
            app:layout_constraintTop_toTopOf="@+id/notifi_userName" />

</androidx.constraintlayout.widget.ConstraintLayout>