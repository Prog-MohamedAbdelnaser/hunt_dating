<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img"
            android:layout_width="165dp"
            android:layout_height="177dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/galler_img_bg"
            android:src="@drawable/boy_casual_eyes"/>


    <TextView android:layout_width="wrap_content"
              android:id="@+id/image_name"
              android:layout_height="match_parent"
              android:text="Personal Images"
              android:layout_marginLeft="2dp"
              android:textSize="8dp"
              android:paddingTop="8dp"
              android:paddingLeft="16dp"
              android:paddingBottom="10dp"
              android:drawablePadding="-60dp"
              android:layout_gravity="center"
              android:textAlignment="center"
              android:textColor="@color/silver"

              android:drawableStart="@drawable/image_gallery"
              android:drawableLeft="@drawable/image_gallery"

              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintBottom_toBottomOf="@id/img"
              android:background="@drawable/img_bg_blur"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/silver"
              android:id="@+id/img_count"
              android:gravity="end"
              android:paddingTop="8dp"
              android:paddingBottom="2dp"
              android:textSize="8dp"
              android:text="207"
              android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="@+id/image_name"
              android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
              app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>

