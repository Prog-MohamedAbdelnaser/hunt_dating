<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/do_you_want_to_add_extra_choice"
                android:textAlignment="center"
                android:textColor="@color/app_text_black"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/we_will_send_you_otp_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                android:fontFamily="@font/montserrat"
                android:lines="2"
                android:text="@string/select_dates_buis_friends"
                android:textAlignment="center"
                android:textColor="@color/app_light_text_color"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

        <Button
                android:id="@+id/add_extra_choice_yesButton"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/app_btn_round"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/yes"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/add_extra_choice_noButton"
                app:layout_constraintTop_toBottomOf="@+id/we_will_send_you_otp_tv" />

        <Button android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="No"
                android:textAllCaps="false"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@drawable/app_secondary_btn"
                android:textSize="13sp"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/add_extra_choice_noButton" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/add_extra_choice_yesButton"
                android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="@+id/add_extra_choice_yesButton" app:layout_constraintBottom_toBottomOf="@+id/add_extra_choice_yesButton"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>