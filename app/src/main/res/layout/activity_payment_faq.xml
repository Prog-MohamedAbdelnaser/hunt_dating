<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorFaqBackgroud"
        tools:context=".payment.PaymentFaqActivity">

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvFaqsList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:paddingLeft="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <me.relex.circleindicator.CircleIndicator2
            android:id="@+id/indicator"
            android:layout_width="wrap_content"
            android:layout_marginTop="34dp"
            android:layout_marginLeft="24dp"
            android:layout_height="wrap_content"
            app:ci_drawable="@drawable/ic_selected_indecator"
            app:ci_drawable_unselected="@drawable/ic_unselected_indecator"
            app:layout_constraintStart_toStartOf="parent"
            app:ci_height="4dp"
            app:ci_width="12dp"
            app:layout_constraintTop_toBottomOf="@+id/rvFaqsList" />


    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="33dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="@string/cant_find_the_answer"
                android:textAlignment="center"
                android:textColor="@color/color_cool_gray"
                android:textSize="17dp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:layout_marginLeft="8dp"
                android:text="@string/contact_us"
                android:textColor="@color/colorAccent"
                android:textSize="17dp" />


    </LinearLayout>


    
</androidx.constraintlayout.widget.ConstraintLayout>