<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/chat_with_us_item_bg"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="8dp"
        android:elevation="1dp"
        android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
                android:id="@+id/contact_us_item_imageView_ll"
                android:layout_width="75dp"
                android:layout_height="0dp"
                android:layout_margin="8dp"
                android:elevation="3dp"
                android:background="@drawable/white_corner_bg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <ImageView
                    android:id="@+id/contact_us_item_imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/white_corner_bg"
                    android:layout_centerInParent="true"
                    android:layout_margin="16dp"
                    android:src="@drawable/email_us_icon" />

        </RelativeLayout>




        <TextView
                android:id="@+id/contact_us_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:text="TextView"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/app_text_black"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/contact_us_item_imageView_ll"
                app:layout_constraintTop_toTopOf="@+id/contact_us_item_imageView_ll" />

        <TextView
                android:id="@+id/contact_us_item_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/montserrat"
                android:textSize="13sp"
                android:textColor="#CDD1D9"
                android:text="TextView"
                app:layout_constraintStart_toStartOf="@+id/contact_us_item_title"
                app:layout_constraintTop_toBottomOf="@+id/contact_us_item_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>



</LinearLayout>