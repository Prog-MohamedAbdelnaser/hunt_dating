<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/filter_bottom_sheet_layout_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close_black_24dp"
            android:id="@+id/filter_dismiss_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"/>
    <TextView
            android:text="@string/filter"
            android:textSize="22sp"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/app_text_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            app:layout_constraintTop_toTopOf="@+id/filter_dismiss_btn"
            app:layout_constraintBottom_toBottomOf="@+id/filter_dismiss_btn"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>
    <androidx.viewpager.widget.ViewPager
            android:layout_width="100dp"
            android:layout_height="145dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView10"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:id="@+id/filter_viewPager"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:tint="@color/app_gray_color"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_height="0dp"
            android:src="@drawable/ic_keyboard_arrow_left"
            android:id="@+id/filter_move_left_arrow_image"
            android:scaleType="centerCrop"
            android:padding="20dp"
            app:layout_constraintTop_toTopOf="@+id/filter_viewPager"
            app:layout_constraintBottom_toBottomOf="@+id/filter_viewPager"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/filter_viewPager"
            android:layout_marginRight="8dp" android:layout_marginTop="16dp" android:layout_marginBottom="16dp"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:src="@drawable/ic_keyboard_arrow_right"
            android:id="@+id/filter_move_right_arrow_image"
            android:tint="@color/app_gray_color"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:padding="20dp"
            app:layout_constraintTop_toTopOf="@+id/filter_viewPager"
            app:layout_constraintBottom_toBottomOf="@+id/filter_viewPager"
            app:layout_constraintStart_toEndOf="@+id/filter_viewPager"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="16dp" android:layout_marginBottom="16dp"/>
    <TextView
            android:text="@string/interested_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/app_text_black"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/filter_viewPager"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_marginRight="16dp" android:id="@+id/linearLayout2">
        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_height="match_parent">
            <ImageView android:layout_width="100dp"
                       android:id="@+id/filter_male_imageView"
                       android:layout_height="100dp"
                       android:background="@drawable/unselected_circular_btn"
                       android:padding="30dp"
                       android:src="@drawable/ic_man"
                       android:clickable="true"
                       app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintEnd_toEndOf="parent"
                       android:layout_marginTop="8dp"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/male"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/app_text_black"
            />

        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="match_parent">
            <ImageView android:layout_width="100dp"
                       android:id="@+id/filter_female_imageView"
                       android:layout_height="100dp"
                       android:background="@drawable/unselected_circular_btn"
                       android:padding="30dp"
                       android:clickable="true"
                       android:src="@drawable/ic_female"

                       app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintEnd_toEndOf="parent"
                       android:layout_marginTop="8dp"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/female"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/app_text_black"
            />
        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="match_parent">
            <ImageView android:layout_width="100dp"
                       android:id="@+id/filter_both_imageView"
                       android:layout_height="100dp"
                       android:background="@drawable/unselected_circular_btn"
                       android:padding="30dp"
                       android:src="@drawable/ic_others_gender"
                       android:clickable="true"
                       app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintEnd_toEndOf="parent"
                       android:layout_marginTop="8dp"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/both"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/app_text_black"
            />
        </LinearLayout>

    </LinearLayout>
    <TextView
            android:text="@string/age_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            android:textColor="@color/app_text_black"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="24dp"/>
    <TextView
            android:text="@string/fromYears_toYears"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/pink"
            android:textSize="13sp"
            android:fontFamily="@font/montserrat"
            android:id="@+id/filter_age_textView" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>

    <com.jaygoo.widget.RangeSeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView12"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:rsb_gravity="center"
            app:rsb_mode="range"
            app:rsb_max="50"
            app:rsb_min="18"
            app:rsb_tick_mark_mode="number"
            android:id="@+id/filter_age_range_seekbar"
            app:rsb_progress_color="@color/colorPrimary"
            app:rsb_thumb_drawable="@drawable/silder_icon"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"/>

    <com.google.android.material.tabs.TabLayout android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="8dp"
                                                app:layout_constraintTop_toBottomOf="@+id/filter_age_range_seekbar"
                                                app:layout_constraintStart_toStartOf="parent"
                                                android:layout_marginLeft="8dp"
                                                android:layout_marginStart="8dp"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                app:tabBackground="@drawable/tab_selector"
                                                app:tabGravity="center"
                                                app:tabIndicatorHeight="0dp"
                                                android:layout_marginEnd="8dp"
                                                android:id="@+id/filter_tab_layout"
                                                android:layout_marginRight="8dp">
    </com.google.android.material.tabs.TabLayout>

    <Button android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/app_btn_round"
            android:layout_marginTop="24dp"
            android:text="@string/apply"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/filter_tab_layout" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginRight="16dp" android:layout_marginEnd="16dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>