<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp">

        <TextView
                android:id="@+id/user_detail_username_txtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/app_text_black"
                android:textSize="25sp" />

        <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_toEndOf="@+id/user_detail_username_txtView"
                android:layout_toRightOf="@+id/user_detail_username_txtView"
                android:background="@drawable/light_blue_circle"
                android:padding="8dp"
                android:id="@+id/for_date"
                android:src="@drawable/ic_like_filled" />

        <ImageView
                android:id="@+id/for_business"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/for_date"
                android:layout_toRightOf="@+id/for_date"
                android:background="@drawable/for_business"
                android:padding="8dp" />

        <ImageView
                android:id="@+id/for_friendship"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/for_business"
                android:layout_toRightOf="@+id/for_business"
                android:background="@drawable/for_friendship"
                android:padding="8dp"
                android:src="@drawable/ic_like_filled" />

        <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_toStartOf="@id/user_detail_username_txtView"
                android:layout_toLeftOf="@id/user_detail_username_txtView"
                android:src="@drawable/user_online_status" />

    </RelativeLayout>

    <TextView
            android:id="@+id/user_detail_job_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/montserrat"
            android:textAlignment="center"
            android:textColor="@color/app_text_black"
            android:textSize="14sp" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

        <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/noun_location" />


        <TextView
                android:id="@+id/location_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:textAlignment="center"
                android:textColor="#9A9DA4"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:text="Hamburg, Germany"
                android:layout_marginStart="10dp" />
    </LinearLayout>

    <TextView
            android:id="@+id/user_detail_about_you"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/montserrat"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="#9A9DA4"
            android:textSize="12sp" />


</LinearLayout>