<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".contactUs.FAQsPayQuestAnsActivty">

    <View android:id="@+id/view5"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/seprator_color"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"/>


    <RelativeLayout
            android:layout_width="0sp"
            android:layout_height="0sp"
            android:layout_marginLeft="16sp"
            android:layout_marginTop="15sp"
            android:layout_marginRight="16sp"
            app:layout_constraintBottom_toTopOf="@+id/tvFaqPayContatUsId"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <androidx.viewpager.widget.ViewPager
                android:id="@+id/vpFaqQesAnsId"
                android:layout_width="match_parent"
                android:layout_height="268dp">
        </androidx.viewpager.widget.ViewPager>

        <com.google.android.material.tabs.TabLayout
                android:id="@+id/tbLayoutFaqQesAnsId"
                android:layout_width="wrap_content"
                android:layout_height="5sp"
                android:layout_below="@+id/vpFaqQesAnsId"
                android:layout_marginLeft="16sp"
                android:layout_marginRight="16sp"
                android:paddingLeft="0sp"
                android:paddingRight="0sp"
                app:tabBackground="@drawable/tab_with_dash_selector"
                app:tabGravity="center"
                app:tabIndicatorHeight="2dp">

        </com.google.android.material.tabs.TabLayout>

    </RelativeLayout>


    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvFaqPayContatUsId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="18dp"
            android:text="@string/can_t_find_the_answer_contact_us"
            android:textColor="#ff9a9da4"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>