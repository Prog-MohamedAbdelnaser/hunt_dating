<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/detail_item_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/phone_number"
            android:textColor="@color/app_text_black"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/detail_item_below_detail_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/verify_phone_to_secure"
            android:textSize="12sp"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/app_light_text_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/detail_item_title_text"
            app:layout_constraintTop_toBottomOf="@+id/detail_item_title_text" />

    <TextView
            android:id="@+id/detail_item_right_detail_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:fontFamily="@font/montserrat"
            android:text="TextView"
            android:textColor="#E50A45"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/detail_item_title_text"
            app:layout_constraintEnd_toStartOf="@+id/imageView10"
            app:layout_constraintTop_toTopOf="@+id/detail_item_title_text" />

    <ImageView
            android:id="@+id/imageView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_keyboard_arrow_right"
            android:tint="@color/app_light_text_color"
            app:layout_constraintBottom_toBottomOf="@+id/detail_item_right_detail_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/detail_item_right_detail_text" />
</androidx.constraintlayout.widget.ConstraintLayout>