<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="8dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/near_by_cards"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivRestaurantImage"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:padding="6dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        tools:src="@drawable/ic_img_location_placeholder"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                <TextView
                        android:id="@+id/tvRestaurantName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="TextView"
                        android:maxLines="1"
                        android:textColor="@color/app_text_black"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ivRestaurantImage" />

                <TextView
                        android:id="@+id/tvRestaurantDetail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/montserrat_regular"
                        tools:text="Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum"
                        android:textColor="@color/app_light_text_color"
                        android:textSize="8sp"
                        android:lines="1"
                        android:maxLines="1"
                        android:layout_marginBottom="20dp"
                        app:layout_constraintEnd_toEndOf="@+id/tvRestaurantName"
                        app:layout_constraintStart_toStartOf="@+id/tvRestaurantName"
                        app:layout_constraintTop_toBottomOf="@+id/tvRestaurantName"
                        app:layout_constraintBottom_toTopOf="@id/ivUsers"
                        />

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivUsers"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/ic_near_by_rest_user"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />

                <TextView
                        android:id="@+id/tvUserNumbers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/ivUsers"
                        android:layout_marginStart="4dp"
                        android:layout_marginLeft="4dp"
                        android:textColor="@color/farAwayHeighlightColor"
                        android:fontFamily="@font/montserrat"
                        android:textSize="10sp"
                        android:layout_toEndOf="@+id/ivUsers"
                        android:layout_toRightOf="@+id/ivUsers"
                        android:text="20"
                        app:layout_constraintTop_toTopOf="@id/ivUsers"
                        app:layout_constraintLeft_toRightOf="@id/ivUsers"
                        />

                <ImageView
                        android:id="@+id/ivForward"
                        android:layout_width="36dp"
                        android:layout_height="30dp"
                        android:background="@drawable/near_by_arrow_custom_bg"
                        android:padding="8dp"
                        android:rotation="180"
                        android:src="@drawable/ic_arrow_back_white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        />

        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>